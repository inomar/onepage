<!DOCTYPE html>
<html>
  <head>
    <title>Onepage</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if author_signed_in? %>
      Logged in as <strong><%= current_author.email %></strong>.
      <%= link_to 'Edit profile', edit_author_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_author_session_path, method: :delete, :class => 'navbar-link'  %>
    <% else %>
      <%= link_to "Sign up", new_author_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Login", new_author_session_path, :class => 'navbar-link'  %>
    <% end %>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <%= yield %>
    <%= javascript_pack_tag 'hello_vue' %>
  </body>
</html>
