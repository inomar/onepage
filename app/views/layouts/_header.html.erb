<div class="ui teal inverted secondary menu">
  <div class="ui container">
    <a class="toc item">
      <i class="sidebar icon"></i>
    </a>
    <p class="item">One page</p>
    <%= link_to 'OnePageとは？', '/', class: 'item' %>
    <%= link_to 'お題', templates_path, class: 'item' %>
    <%= link_to '作品', pages_path, class: 'item' %>
    <div class="right item">
      <%= link_to '作品を投稿する', new_page_path, class: 'ui inverted basic button item' %>
      <% if author_signed_in? %>
          <div class="ui dropdown item">
            <%= attachment_image_tag(current_author, :image, :fill, 100, 100, format: 'jpg', class: 'ui avatar image') %>
            <div class="menu">
              <%= link_to 'プロフィール', author_path(current_author), class: 'item'%>
              <%= link_to 'ログアウト', destroy_author_session_path, method: :delete, class: 'item' %>
            </div>
          </div>
      <% else %>
          <%= link_to '新規登録', new_author_registration_path, class: 'ui item' %>
          <%= link_to 'ログイン', new_author_session_path, class: 'ui item' %>
          <%= link_to 'twitter', author_twitter_omniauth_authorize_path, class: 'ui item' %>
      <% end %>
    </div>
  </div>
</div>
