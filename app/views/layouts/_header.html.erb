<div class="ui inverted teal secondary pointing menu">
  <div class="ui container">
    <div class="left menu">
      <a class="launch icon hidden item js-menu">
        <i class="content icon"></i>
      </a>
      <%= link_to 'OnePage', '/', class: 'item' %>
      <%= link_to 'お題', templates_path, class: 'item' %>
      <%= link_to '作品', pages_path, class: 'item' %>
    </div>
    <div class="right menu">
      <div class="hidden item">
        <div class="ui icon input">
          <input type="text" placeholder="作品、作者、タグ...">
          <i class="search icon"></i>
        </div>
      </div>
      <% if author_signed_in? %>
      <div class="ui dropdown">
        <a class="item js-dropdown-btn">
          <%= attachment_image_tag(current_author, :image, :fill, 100, 100, format: 'jpg', class: 'ui avatar image') %>
          <div class="menu">
            <%= link_to 'プロフィール', author_path(current_author), class: 'item' %>
            <%= link_to 'ログアウト', author_path(current_author), class: 'item' %>
          </div>
        </a>
      </div>
      <% else %>
        <%= link_to '新規登録', new_author_registration_path, class: 'ui inverted basic button' %>
        <%= link_to 'ログイン', new_author_session_path, class: 'ui inverted basic button' %>
      <% end %>
    </div>
  </div>
</div>
