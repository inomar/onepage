<div class="card">
  <%= link_to page_path(page), class: 'ui fluid image' do %>
   <%# attachment_image_tag(page, :cover, :fill, 200, 100, format: 'jpg') %>
  <% end %>
  <div class="content">
    <%= link_to page.title, page_path(page), class: 'header' %>
    <div class="meta">
      <%= link_to page.category.name, pages_path(category_id: page.category.id) %>
    </div>
    <span>
     <%= attachment_image_tag(page.author, :image, :fill, 100, 100, format: 'jpg', class: 'ui avatar image') %>
     <span><%= page.author.pen_name %></span>
    </span>
    <div class="description">
      <%= page.summary %>
    </div>
    <div>
      <% page.tags.each do |tag| %>
        <%= link_to tag, '#', class: 'ui label' %>
      <% end %>
    </div>
  </div>
  <div class="extra content">
      <span class="right floated">
        <%= l page.created_at, formats: :midium %>
      </span>
    <span>
    <% if page.favorite_author(current_author.id) %>
      <%= link_to delete_page_path(page.id), remote: true, method: :post do %>
        <i class="heart icon"></i>
      <% end %>
    <% else %>
      <%= link_to add_page_path(page.id), remote: true, method: :post do %>
        <i class="empty heart icon"></i>
      <% end %>
    <% end %>
    <%= page.favorites.count %>
    </span>
  </div>
</div>
