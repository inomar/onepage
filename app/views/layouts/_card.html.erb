<div class="card">
  <%= link_to page_path(page), class: 'ui fluid image' do %>
   <%# attachment_image_tag(page, :cover, :fill, 200, 100, format: 'jpg') %>
  <% end %>
  <div class="extra content">
    <%= link_to author_path page.author do %>
        <%= attachment_image_tag(page.author, :image, :fill, 100, 100, format: 'jpg', class: 'ui avatar image') %>
        <%= page.author.pen_name %>
    <% end %>
  </div>
  <div class="content">
    <%= link_to page.title, page_path(page), class: 'header' %>
    <div class="meta">
      <%= link_to page.category.name, pages_path(category_id: page.category.id) %>
    </div>
    <div class="description">
      <p><%= page.summary %></p>
      <div class="ui tiny labels">
        <% page.tags.each.with_index do |tag, index| %>
          <% break if index > 2 %>
          <%= link_to '#', class: 'ui basic teal label' do %>
            <i class="hashtag icon"></i><%= tag %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="extra content">
    <div class="left floated">
     <% if author_signed_in? %>
      <% if page.favorite_author(current_author.id) %>
          <%= link_to delete_page_path(page.id), remote: true, method: :post do %>
              <i class="red heart icon"></i><%= page.favorites.count %>
          <% end %>
      <% else %>
          <%= link_to add_page_path(page.id), remote: true, method: :post do %>
              <i class="empty red heart icon"></i><%= page.favorites.count %>
          <% end %>
      <% end %>
      <% end %>
    </div>
    <div class="right floated">
      <%= l page.created_at, format: :short %>
    </div>
  </div>
</div>
