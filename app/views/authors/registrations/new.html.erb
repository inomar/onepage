<div class="ui container">
  <div class="ui two column centered stackable grid">
    <div class="column">
      <h2 class="header">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui large form'}) do |f| %>
          <%= devise_error_messages! %>
          <div class="ui stacked segment">
            <div class="field">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form__input', autofocus: true %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
              <%= f.password_field :password, class: 'form__input', autocomplete: 'off' %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'form__input', autocomplete: 'off' %>
            </div>

            <div class="field">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form__input' %>
            </div>

            <div class="field">
              <%= f.label :pen_name %>
              <%= f.text_field :pen_name, class: 'form__input' %>
            </div>

            <div class="actions">
              <%= f.submit '登録', class: 'fluid ui blue button' %>
            </div>
          </div>
      <% end %>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
