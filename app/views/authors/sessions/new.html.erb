<div class="ui container">
  <div class="ui two column centered stackable grid">
    <div class="column">
      <h2>ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui large form'}) do |f| %>
          <div class="ui stacked segment">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, class: 'form__input', autofocus: true %>
            </div>

            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, class: 'form__input',autocomplete: "off" %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <div class="ui checkbox">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                </div>
            <% end -%>

            <div class="actions">
              <%= f.submit 'ログイン', class: 'fluid ui basic blue button' %>
            </div>
            <div class="ui horizontal divider">Or </div>
            <div class="field">
              <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to omniauth_authorize_path(resource_name, provider), class: "fluid ui #{OmniAuth::Utils.camelize(provider).downcase} button" do %>
                    <i class="<%= OmniAuth::Utils.camelize(provider).downcase %> icon"></i>
                    <%= OmniAuth::Utils.camelize(provider).downcase %>でログイン
                  <% end %>
                <% end -%>
              <% end -%>
            </div>
          </div>
        <% end %>
        <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
