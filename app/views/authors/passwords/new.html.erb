<div class="ui container">
  <div class="ui two column centered stackable grid">
    <div class="column">
      <h2 class="header">パスワードを忘れましたか？</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui large form'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="ui stacked segment">
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form__input', autofocus: true %>
          </div>

          <div class="actions">
            <%= f.submit 'パスワードを再発行', class: 'fluid ui basic blue button' %>
          </div>
        </div>
      <% end %>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
