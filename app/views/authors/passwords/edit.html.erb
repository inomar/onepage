<div class="ui container">
  <div class="ui two column centered stackable grid">
    <div class="column">
      <h2 class="header">パスワード再設定</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'ui large form' }) do |f| %>
        <%= devise_error_messages! %>
        <div class="ui stacked padded segment">
          <%= f.hidden_field :reset_password_token %>
          <div class="field">
            <%= f.label :password do %>
                新しいパスワード
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: 'off' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: 'off' %>
          </div>

          <div class="actions">
            <%= f.submit 'パスワードを更新', class: 'fluid ui blue large button' %>
          </div>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
