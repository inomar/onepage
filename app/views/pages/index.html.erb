<div class="ui container">
  <div class="ui link four stackable cards">
    <% @pages.each do | page | %>
        <%= render 'layouts/card', page: page %>
    <% end %>
  </div>

  <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
      <%= link_to tag.name, tag_pages_path(name: tag.name), class: css_class %>
  <% end %>

  <%= paginate @pages %>
</div>
<%= javascript_pack_tag 'page' %>
