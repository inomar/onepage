<div class="ui grid">
  <% @pages.each do | page | %>
      <% if page.is_open %>
        <div class="four wide column"></div>
            <%= attachment_image_tag(page, :cover, :fill, 100, 100, format: 'jpg', class: 'card-img-top') %>
            <div class="card-block">
              <h4 class="card-title"><%= page.title %></h4>
              <p class="card-text"><%= page.summary %></p>
              <p class="card-text"><%= page.category.name %></p>
              <%= link_to '詳細', page_path(page), class: 'btn btn-primary' %>
              <% if current_author == page.author %>
                  <%= link_to '編集', edit_page_path(page), class: 'btn btn-primary' %>
              <% end %>
            </div>
        </div>
      <% end %>
  <% end %>
</div>

  <div class="ui modal">
    <i class="close icon"></i>
    <div class="header">
      Profile Picture
    </div>
    <div class="image content">
      <div class="ui medium image">
        <img src="/images/avatar/large/chris.jpg">
      </div>
      <div class="description">
        <div class="ui header">We've auto-chosen a profile image for you.</div>
        <p>We've grabbed the following image from the <a href="https://www.gravatar.com" target="_blank">gravatar</a> image associated with your registered e-mail address.</p>
        <p>Is it okay to use this photo?</p>
      </div>
    </div>
    <div class="actions">
      <div class="ui black deny button">
        Nope
      </div>
      <div class="ui positive right labeled icon button">
        Yep, that's me
        <i class="checkmark icon"></i>
      </div>
    </div>
  </div>
