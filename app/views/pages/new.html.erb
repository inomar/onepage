<%= form_for @page do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_area :summary, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :story %>
    <%= f.text_area :story, class: 'form-control' %>
  </div>



  <button type="submit" class="btn btn-default">送信</button>


<% end %>
